{
  "name": "multi-targeter",
  "private": true,
  "dependencies": {
    "serverless": "^1.48.2",
    "serverless-haskell": "^0.8.8"
  },
  "devDependencies": {
    "serverless-offline": "^5.8.0"
  },
  "scripts": {
    "start": "ghcid --command='stack ghci src/Handler.hs test/Spec.hs' --test=main",
    "deploy": "set -u && DATABASE_URL=$MULTI_TARGETER_DB_URL ./node_modules/.bin/sls deploy",
    "deployprod": "set -u && DATABASE_URL=$MULTI_TARGETER_PROD_DB_URL ./node_modules/.bin/sls deploy --stage prod"
  }
}
